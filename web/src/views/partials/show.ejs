<section class="container product-show my-5 py-5">
  <div class="row">
    <div class="col-lg-5 col-md-12 col-12">
      <img class="img-fluid w-100 mb-1" src="<%= product.imageUrl %>" alt="" />
    </div>
    <div class="col-lg-6 col-md-12 col-12">
      <h6><%= product.category %></h6>
      <h3 class="py-1"><%= product.name %></h3>
      <h2>R$ <%= product.price %></h2>
      <input type="number" value="1" />
      <button class="buy-btn">COMPRAR</button>
      <h4 class="my-2">Detalhes do Produto</h4>
      <span><%= product.description %></span>
    </div>
  </div>
  <div class="container text-center py-3">
    <a class="btn btn-warning btn-lg" href="/products/<%= product._id %>/edit" role="button">EDITAR</a>
    <form action="/products/<%= product._id %>?_method=DELETE" method="POST" style="display: inline-block">
      <button type="submit" class="btn btn-danger btn-lg">REMOVER</button>
    </form>
  </div>
</section>
