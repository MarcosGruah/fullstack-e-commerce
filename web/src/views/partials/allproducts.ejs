<section class="featured my-5">
  <div class="container text-center my-5">
    <h2 class="text-uppercase"><%= title %></h2>
    <hr class="mx-auto" />
  </div>
  <div class="row mx-auto container">
    <% products.forEach(product => { %>
    <div class="product text-center col-lg-3 col-md-4 col-12">
      <a href="/products/<%= product._id %>"><img class="img-fluid mb-3" src="<%= product.imageUrl %>" alt="" /></a>
      <div class="rating">
        <i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i
        ><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i>
      </div>
      <h4 class="product-name"><%= product.name %></h4>
      <h5 class="product-price">R$ <%= product.price %></h5>
      <a href="/products/<%= product._id %>" class="buy-btn btn btn-dark" href="#" role="button">Comprar Agora</a>
    </div>
    <% }) %>
    <nav aria-label="...">
      <ul class="pagination">
        <li class="page-item disabled">
          <a class="page-link">Previous</a>
        </li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item" aria-current="page">
          <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
          <a class="page-link" href="#">Next</a>
        </li>
      </ul>
    </nav>
  </div>
</section>
